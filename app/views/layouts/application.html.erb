<!DOCTYPE html>
<html>
<head>
  <title>Crm</title>
  <%= stylesheet_link_tag    "/kickstart/kickstart.css", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <nav>
      <ul class="menu">
        <li class="current"><%= link_to 'CRM', root_path %></li>
        <li class="pull-right"><%= link_to 'Add Case', new_case_path %></li>
        <li class="pull-right"><%= link_to 'Add Contact', new_contact_path %></li>
      </ul>
    </nav>
  </header>

  <div class="grid">
    <div class="col_3">
        <%= render 'common/nav' %>
    </div>

    <div class="col_9">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="notice <%= name == :notice ? "success" : "error" %>">
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
            <a href="#close" class="icon-remove"></a>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
  </div>

</body>
</html>
